<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carrati.mybills">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".AppModule"
        android:allowBackup="true"
        android:icon="@drawable/ic_female_wallet"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_female_wallet"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyBills">

        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.main.MainActivity"/>

        <activity
            android:name=".ui.despesa.DespesaActivity"
            android:theme="@style/DespesaTheme"/>

        <activity
            android:name=".ui.receita.ReceitaActivity"
            android:theme="@style/ReceitaTheme"/>

        <activity
            android:name=".ui.transferencia.TransferenciaActivity"
            android:theme="@style/TransferenciaTheme"/>

    </application>



</manifest>